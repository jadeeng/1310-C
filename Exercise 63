#include <stdio.h>      
#include <iostream>
using namespace std;
double distance(double &x1, double &y1, double &x2, double &y2);
int main ()
{
    double x1, y1, x2, y2;
    cout<<"x1\n";
    cin>>x1;
    cout<<"y1.\n";
    cin>>y1;
    cout<<"x2\n";
    cin>>x2;
    cout<<"y2\n";
    cin>>y2;
    cout<<"The distance between these values is "<<distance(x1, y1, x2, y2);
  return 0;
}
double distance(double &x1, double &y1, double &x2, double &y2)
{
    return sqrt(pow((x2-x1),2)+pow((y2-y1),2));
    
}
